.col-md-12.well
    #markers
        .marker.marker-1
            .row.bg-primary
                .text-center.marker-title Biomarker #1
            .row
                //.col-md-12
                //    label(for='name-input') Biomarker Name
                //    input#name-input(name="#name-input",type="text")
                .panel.panel-default
                    .panel-title
                        a.panel-toggle(data-toggle='collapse', data-parent='#markers', href='#marker-1-panel-1')
                            | Option 1
                            span.caret
                    #marker-1-panel-1.panel-collapse.collapse.in
                        .panel-body
                            table.option-1.table.table-striped.table-condensed.table-responsive
                                tr.active
                                    th.col-md-2.header
                                        .sr-only Empty cell
                                            a(href="#prob_m") Skip to Content
                                    th#prob_m.termToDefine.header Marker Positive (M+)
                                    th#m_neg.termToDefine.header Marker Negative (M-)
                                tr
                                    th#prob_d.termToDefine.header.active Disease Positive (D+)
                                    td
                                        label.sr-only(for='a') A
                                        input#a.input(name='a', type='text')
                                    td
                                        label.sr-only(for='b') B
                                        input#b.input(name='b', type='text')
                                tr
                                    th#d_neg.termToDefine.header.active Disease Negative (D-)
                                    td
                                        label.sr-only(for='c') C
                                        input#c.input(name='c', type='text')
                                    td
                                        label.sr-only(for='d') D
                                        input#d.input(name='d', type='text')
                .panel.panel-default
                    .panel-title
                        a.panel-toggle(data-toggle='collapse', data-parent='#markers', href='#marker-1-panel-2')
                            | Option 2
                            span.caret
                    #marker-1-panel-2.panel-collapse.collapse
                        .panel-body
                            table.option-2.table.table-condensed.table-striped.table-responsive
                                thead
                                    tr.active
                                        th.header(title='Parameter Type Column') Parameter
                                        th.header(title="Parameter Value Column")  Value
                                tbody
                                    tr(row='0')
                                        td
                                            select.input(name="param_1")
                                                option(value='ppv') PPV
                                                option(value='sens') Sensitivity
                                            span.dd.termToDefine.glyphicon.glyphicon-info-sign
                                        td
                                            input.input(type='text',name="param_1")
                                    tr(row='1')
                                        td
                                            select.input(name="param_2")
                                                option(value='npv') NPV
                                                option(value='spec') Specificity
                                            span.dd.termToDefine.glyphicon.glyphicon-info-sign
                                        td
                                            input.input(type='text',name="param_2")
                                    tr(row='2')
                                        td
                                            select.input(name="param_3")
                                                option(value='prob_m') Marker Positivity (P(M+))
                                                option(value='prob_d') Disease Prevalence (P(D+))
                                            span.dd.termToDefine.glyphicon.glyphicon-info-sign
                                        td
                                            input.input(type='text', name="param_3")
                                    tr(row='3')
                                        td Sample Size
                                        td
                                            input.input(name="sampsize",type='text' )
#control-group.col-md-12
    .row
        .pull-left
            button#add-marker
                span.glyphicon.glyphicon-plus-sign(alt="Add(+)",title="Add biomarker")
                span.sr-only Add Biomarker
            button#delete-marker(title="Delete biomarker")
                span.glyphicon.glyphicon-minus-sign(alt="Delete(-)")
                span.sr-only Delete Biomarker

                button#reset(type='reset', title="Reset") Reset
                button#calculate(type='button', title="Calculate") Calculate
        .pull-right
            button.btn.btn-sm.btn-success#test(title="Populate 1 biomarker using option 1 with test data") Example